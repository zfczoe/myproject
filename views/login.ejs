<head>

	<!-- Basic Page Needs
	================================================== -->
	<meta charset="utf-8">
	<title><%= title %></title>
	<meta name="keywords" content="">
	<meta name="description" content="">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	<!-- Mobile Specific Metas
	================================================== -->
	<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0">

	<!-- CSS
	================================================== -->
	<!-- Base + Vendors CSS -->
	<link rel='icon' href='/images/img/favicon.ico' mce_href='/images/img/favicon.ico' type='image/x-icon'>
	<link rel="stylesheet" href="/stylesheets/bootstrap.css">
	<link rel="stylesheet" href="/stylesheets/login.css">
</head>
<body>
	<div class="container">
		<div class="logo">
			<h1></h1>
		</div>
		<div>
			<h2>用户登陆</h2>
			<div class="row">
				<div class="span6">
					<form id="myform" class="form-horizontal" method="post" action='/login'>
						 <div class="control-group">
					    <label class="control-label" for="inputPassword">用户名</label>
					    <div class="controls">
					      <input type="text" id="inputUsername" class="required" value="" name="username"><span class="noReg"></span>
					    </div>
					  </div>
				
					  <div class="control-group">
					    <label class="control-label" for="inputPassword">密码</label>
					    <div class="controls">
					      <input type="password" id="inputPassword" class="required" name="password"><span class="noRegPassword"><%= (noReg == null ? "" : noReg) %></span>
					    </div>
					  </div>
					  	  <div class="control-group">
					  	  	
					    <div class="controls">
					      <button type="submit" class="btn btn-success">登陆</button>
					    </div>
					  </div>
					</form>
				</div>
				<div class="span6">&gt; 还没有账号？<a href="/reg">立即注册</a></div>
			</div>
		</div>
	</div>
	<script src="/javascripts/seajs/sea.js" 
    			data-config="/javascripts/seajs-config.js" 
    			data-main="/javascripts/login.js" >
	</script>
</body>
